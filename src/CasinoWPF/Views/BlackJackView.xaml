<Page x:Class="CasinoWPF.Views.BlackJackView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:CasinoWPF.Converters"
      Title="BlackJack">

    <Page.Resources>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <local:CountToBooleanConverter x:Key="CountToBooleanConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#3498DB" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="BlackJack" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           Text="{Binding PlayerHighscore, StringFormat=Highscore: {0}}" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"/>

                <TextBlock Grid.Column="2" 
                           Text="{Binding Balance, StringFormat=Guthaben: {0} Jetons}" 
                           Foreground="White" 
                           FontSize="16" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Dealers Hand -->
        <Border Grid.Row="1" Background="#34495E" Margin="10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding DealerName}"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Left"
                           Margin="10,5"/>

                <TextBlock Grid.Row="1" 
                           Text="{Binding DealerScore, StringFormat=Punkte: {0}}" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="Normal" 
                           Margin="10,0,10,5"/>

                <ItemsControl Grid.Row="2" 
                              ItemsSource="{Binding DealerCards}" 
                              Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="70" Height="100" Background="White" BorderBrush="{Binding SuitColor}" BorderThickness="2" CornerRadius="5" Margin="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="{Binding DisplayValue}" FontWeight="Bold" Foreground="{Binding SuitColor}" Margin="5,2" HorizontalAlignment="Left"/>
                                    <TextBlock Grid.Row="1" Text="{Binding SuitSymbol}" FontSize="24" Foreground="{Binding SuitColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="2" Text="{Binding DisplayValue}" FontWeight="Bold" Foreground="{Binding SuitColor}" Margin="5,2" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- Computer Players -->
        <Border Grid.Row="2" Background="#2C3E50" Margin="10,5" 
                Visibility="{Binding ComputerPlayers.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding ComputerPlayers}" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#34495E" CornerRadius="5" Margin="5" Padding="10">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding HandValue, StringFormat=Punkte: {0}}" FontSize="12" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,2"/>
                                <ItemsControl ItemsSource="{Binding Cards}" Margin="0,5">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="50" Height="70" Background="White" BorderBrush="{Binding SuitColor}" BorderThickness="1" CornerRadius="3" Margin="2">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Grid.Row="0" Text="{Binding DisplayValue}" FontSize="10" FontWeight="Bold" Foreground="{Binding SuitColor}" Margin="2,1" HorizontalAlignment="Left"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding SuitSymbol}" FontSize="16" Foreground="{Binding SuitColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Row="2" Text="{Binding DisplayValue}" FontSize="10" FontWeight="Bold" Foreground="{Binding SuitColor}" Margin="2,1" HorizontalAlignment="Right"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- Players Hand -->
        <Border Grid.Row="3" Background="#2C3E50" Margin="10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="{Binding PlayerScore, StringFormat=Spieler: {0}}" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="10,5"/>

                <ItemsControl Grid.Row="1" 
                              ItemsSource="{Binding PlayerCards}" 
                              Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="70" Height="100" Background="White" BorderBrush="{Binding SuitColor}" BorderThickness="2" CornerRadius="5" Margin="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="{Binding DisplayValue}" FontWeight="Bold" Foreground="{Binding SuitColor}" Margin="5,2" HorizontalAlignment="Left"/>
                                    <TextBlock Grid.Row="1" Text="{Binding SuitSymbol}" FontSize="24" Foreground="{Binding SuitColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="2" Text="{Binding DisplayValue}" FontWeight="Bold" Foreground="{Binding SuitColor}" Margin="5,2" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- game controls & result message -->
        <Grid Grid.Row="4" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Actions -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" 
                        Visibility="{Binding GameInProgress, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button Content="Hit" Command="{Binding HitCommand}" Background="#27AE60" Foreground="White" Width="80" Margin="5"/>
                <Button Content="Stand" Command="{Binding StandCommand}" Background="#E67E22" Foreground="White" Width="80" Margin="5"/>
                <Button Content="Double Down" Command="{Binding DoubleDownCommand}" Background="#9B59B6" Foreground="White" Width="100" Margin="5" 
                        IsEnabled="{Binding PlayerCards.Count, Converter={StaticResource CountToBooleanConverter}, ConverterParameter=2}"/>
            </StackPanel>

            <!-- Result message -->
            <Border Grid.Column="1" Background="#2ECC71" Padding="15,10" CornerRadius="5" 
                    Visibility="{Binding ResultMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="{Binding ResultMessage}" FontSize="16" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" TextAlignment="Center"/>
            </Border>

            <!-- Betting controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" 
                        Visibility="{Binding GameInProgress, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <TextBlock Text="Spieler:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Black"/>
                <ComboBox Width="60" ItemsSource="{Binding PlayerCountOptions}" SelectedItem="{Binding SelectedPlayerCount}" Margin="0,0,20,0"/>
                <TextBlock Text="Einsatz:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Black"/>
                <ComboBox Width="100" ItemsSource="{Binding BetOptions}" SelectedItem="{Binding SelectedBet}" Margin="0,0,10,0"/>
                <Button Content="Neues Spiel" Command="{Binding NewGameCommand}" Background="#3498DB" Foreground="White" Padding="10,5"/>
            </StackPanel>
        </Grid>

        <!-- Navigation buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
            <Button Content="Zurück zur Spielauswahl" Command="{Binding ReturnToSelectionCommand}" Background="#95A5A6" Foreground="White" Padding="10,5" Margin="5"/>
            <Button Content="Hauptmenü" Command="{Binding ReturnToMainMenuCommand}" Background="#7F8C8D" Foreground="White" Padding="10,5" Margin="5"/>
            <Button Content="💬 Feedback" Click="OpenFeedback_Click" Background="DeepSkyBlue" Foreground="White" Padding="10,5" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>