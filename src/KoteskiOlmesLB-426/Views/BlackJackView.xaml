<Page x:Class="KoteskiOlmesLB_426.Views.BlackJackView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:KoteskiOlmesLB_426.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BlackJack">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#3498DB" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="BlackJack" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2" 
                           Text="{Binding CurrentPlayer.Balance, StringFormat={}Guthaben: {0} Jetons}" 
                           Foreground="White" 
                           FontSize="16" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Dealer's Hand -->
        <Border Grid.Row="1" Background="#34495E" Margin="10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="{Binding DealerScore, StringFormat={}Dealer: {0}}" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="10,5"/>

                <ItemsControl Grid.Row="1" 
                              ItemsSource="{Binding DealerCards}" 
                              Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="70" 
                                    Height="100" 
                                    Background="White" 
                                    BorderBrush="{Binding SuitColor}" 
                                    BorderThickness="2" 
                                    CornerRadius="5" 
                                    Margin="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" 
                                               Text="{Binding DisplayValue}" 
                                               FontWeight="Bold" 
                                               Foreground="{Binding SuitColor}" 
                                               Margin="5,2" 
                                               HorizontalAlignment="Left"/>

                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding SuitSymbol}" 
                                               FontSize="24" 
                                               Foreground="{Binding SuitColor}" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Row="2" 
                                               Text="{Binding DisplayValue}" 
                                               FontWeight="Bold" 
                                               Foreground="{Binding SuitColor}" 
                                               Margin="5,2" 
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- Player's Hand -->
        <Border Grid.Row="2" Background="#2C3E50" Margin="10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="{Binding PlayerScore, StringFormat={}Spieler: {0}}" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="10,5"/>

                <ItemsControl Grid.Row="1" 
                              ItemsSource="{Binding PlayerCards}" 
                              Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="70" 
                                    Height="100" 
                                    Background="White" 
                                    BorderBrush="{Binding SuitColor}" 
                                    BorderThickness="2" 
                                    CornerRadius="5" 
                                    Margin="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" 
                                               Text="{Binding DisplayValue}" 
                                               FontWeight="Bold" 
                                               Foreground="{Binding SuitColor}" 
                                               Margin="5,2" 
                                               HorizontalAlignment="Left"/>

                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding SuitSymbol}" 
                                               FontSize="24" 
                                               Foreground="{Binding SuitColor}" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Row="2" 
                                               Text="{Binding DisplayValue}" 
                                               FontWeight="Bold" 
                                               Foreground="{Binding SuitColor}" 
                                               Margin="5,2" 
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- Game Controls -->
        <Grid Grid.Row="3" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Game Actions -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Visibility="{Binding GameInProgress, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button Content="Hit" 
                        Command="{Binding HitCommand}" 
                        Background="#27AE60" 
                        Foreground="White" 
                        Width="80" 
                        Margin="5"/>

                <Button Content="Stand" 
                        Command="{Binding StandCommand}" 
                        Background="#E67E22" 
                        Foreground="White" 
                        Width="80" 
                        Margin="5"/>

                <Button Content="Double Down" 
                        Command="{Binding DoubleDownCommand}" 
                        Background="#9B59B6" 
                        Foreground="White" 
                        Width="100" 
                        Margin="5" 
                        IsEnabled="{Binding CanDoubleDown}"/>
            </StackPanel>

            <!-- Result Message -->
            <Border Grid.Column="1" 
                    Background="{Binding ResultBackground}" 
                    Padding="15,10" 
                    CornerRadius="5" 
                    Visibility="{Binding HasResult, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="{Binding ResultMessage}" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White"/>
            </Border>

            <!-- Betting Controls -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Visibility="{Binding GameInProgress, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=inverse}">
                <TextBlock Text="Einsatz:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           Foreground="White"/>

                <ComboBox Width="100" 
                          ItemsSource="{Binding BetOptions}" 
                          SelectedItem="{Binding SelectedBet}" 
                          Margin="0,0,10,0"
                          Foreground="White"/>

                <Button Content="Neues Spiel" 
                        Command="{Binding NewGameCommand}" 
                        Background="#3498DB" 
                        Foreground="White" 
                        Padding="10,5"/>
            </StackPanel>
        </Grid>

        <!-- Footer with navigation buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,5,0,10">
            <Button Content="Zurück zur Spielauswahl" 
                    Command="{Binding ReturnToSelectionCommand}" 
                    Background="#95A5A6" 
                    Foreground="White" 
                    Padding="10,5" 
                    Margin="5"/>

            <Button Content="Hauptmenü" 
                    Command="{Binding ReturnToMainMenuCommand}" 
                    Background="#7F8C8D" 
                    Foreground="White" 
                    Padding="10,5" 
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Page>