<Page x:Class="CasinoWPF.Views.SlotMachineView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:CasinoWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Slot Machine">


    <Page.Resources>
        <Storyboard x:Key="ShakeReel">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="0" To="10" Duration="0:0:0.05" AutoReverse="True" RepeatBehavior="0:0:0.3"/>
        </Storyboard>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#E74C3C" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Slot Machine" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2"
                           Text="{Binding Balance, StringFormat='Guthaben: {0} Jetons'}"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>

            </Grid>
        </Border>

        <!-- Slot Machine Display -->
        <Border Grid.Row="1" 
                Background="#34495E" 
                Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Jackpot Display -->
                <Border Grid.Row="0" 
                        Background="#F39C12" 
                        Margin="20,10" 
                        Padding="5" 
                        CornerRadius="5">
                    <TextBlock Text="{Binding JackpotAmount, StringFormat={}JACKPOT: {0} JETONS}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Slot Reels -->
                <Grid Grid.Row="1" Margin="20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Reel 1 -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            Margin="10" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="5" 
                            CornerRadius="10">
                        <Viewbox>
                            <Viewbox>
                                <Image x:Name="Reel1ImageControl"
                                       Source="{Binding Reel1DisplayImage}"
                                       RenderTransformOrigin="0.5,0.5"
                                       Stretch="Uniform"
                                       Width="100"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                    <Image.RenderTransform>
                                        <TranslateTransform />
                                    </Image.RenderTransform>
                                </Image>
                            </Viewbox>
                        </Viewbox>
                    </Border>

                    <!-- Reel 2 -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            Margin="10" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="5" 
                            CornerRadius="10">
                        <Viewbox>
                            <Image x:Name="Reel2ImageControl"
                                   Source="{Binding Reel2DisplayImage}"
                                   RenderTransformOrigin="0.5,0.5"
                                   Stretch="Uniform"
                                   Width="100"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                                <Image.RenderTransform>
                                    <TranslateTransform />
                                </Image.RenderTransform>
                            </Image>
                        </Viewbox>
                    </Border>

                    <!-- Reel 3 -->
                    <Border Grid.Column="2" 
                            Background="White" 
                            Margin="10" 
                            BorderBrush="#BDC3C7" 
                            BorderThickness="5" 
                            CornerRadius="10">
                        <Viewbox>
                            <Image x:Name="Reel3ImageControl"
                                   Source="{Binding Reel3DisplayImage}"
                                   RenderTransformOrigin="0.5,0.5"
                                   Stretch="Uniform"
                                   Width="100"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                                <Image.RenderTransform>
                                    <TranslateTransform />
                                </Image.RenderTransform>
                            </Image>
                        </Viewbox>
                    </Border>
                </Grid>

                <!-- Result Message -->
                <Border Grid.Row="2" 
                        Background="{Binding ResultBackground}" 
                        Margin="20,0,20,10" 
                        Padding="10" 
                        CornerRadius="5" 
                        Visibility="{Binding HasResult, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding ResultMessage}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Controls -->
        <Grid Grid.Row="2" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <TextBlock Text="Einsatz:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           Foreground="White"/>

                <ComboBox Width="100" 
                          ItemsSource="{Binding BetOptions}" 
                          SelectedItem="{Binding SelectedBet}" 
                          Margin="0,0,10,0"
                          Foreground="Black"/>
            </StackPanel>

            <Button Grid.Column="1" 
                    Content="SPIN!" 
                    Command="{Binding SpinCommand}" 
                    Click="SpinButton_Click"
                    Background="#E74C3C" 
                    Foreground="Black" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Padding="20,10" 
                    IsEnabled="{Binding CanSpin}"/>

            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Content="Max Bet" 
                        Command="{Binding MaxBetCommand}" 
                        Background="#9B59B6" 
                        Foreground="Black" 
                        Padding="10,5" 
                        Margin="0,0,10,0"/>

                <Button Content="Auto Spin" 
                        Command="{Binding AutoSpinCommand}" 
                        Background="#3498DB" 
                        Foreground="Black" 
                        Margin="0,0,10,0"
                        Padding="10,5"/>

                <Button Content="ℹ️"
                        ToolTip="Anleitung zu AutoSpin und Symbolgewinnen anzeigen"
                        Click="AutoSpinInfo_Click"
                        Background="SkyBlue"
                        Foreground="Black"
                        Padding="10,5"/>
            </StackPanel>
        </Grid>

        <!-- Footer with navigation buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,10">
            <Button Content="Zurück zur Spielauswahl" 
                    Command="{Binding ReturnToSelectionCommand}" 
                    Background="#95A5A6" 
                    Foreground="White" 
                    Padding="10,5" 
                    Margin="5"/>

            <Button Content="Hauptmenü" 
                    Command="{Binding ReturnToMainMenuCommand}" 
                    Background="#7F8C8D" 
                    Foreground="White" 
                    Padding="10,5" 
                    Margin="5"/>

            <Button Content="💬 Feedback"
                    Click="OpenFeedback_Click"
                    Background="DeepSkyBlue"
                    Foreground="White"
                    Padding="10,5"
                    Margin="5"
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Page>