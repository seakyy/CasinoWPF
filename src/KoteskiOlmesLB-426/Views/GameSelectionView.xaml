<Page x:Class="KoteskiOlmesLB_426.Views.GameSelectionView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KoteskiOlmesLB_426"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Spielauswahl">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Spieler:" 
                           Foreground="White" 
                           FontSize="16" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           Text="{Binding CurrentPlayer.Name}" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="10,0" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2" 
                           Text="{Binding CurrentPlayer.Balance, StringFormat={}Guthaben: {0} Jetons}" 
                           Foreground="White" 
                           FontSize="16" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Game Selection -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Wähle dein Spiel:" 
                       FontSize="22" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"
                       Foreground="White"/>

            <UniformGrid Grid.Row="1" Rows="1" Columns="2">
                <!-- BlackJack Card -->
                <Border Margin="10" 
                        BorderBrush="#3498DB" 
                        BorderThickness="1" 
                        CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="BlackJack" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Padding="10" 
                                   Background="#3498DB" 
                                   Foreground="White"/>

                        <StackPanel Grid.Row="1" Margin="10">
                            <TextBlock Text="Ziel: Bringe drei gleiche Symbole in einer Reihe, um zu gewinnen." 
                                       TextWrapping="Wrap" 
                                       Margin="0,10" 
                                       Foreground="White"/>

                            <TextBlock Text="• Drei Walzen mit verschiedenen Symbolen" 
                                       TextWrapping="Wrap" 
                                       Margin="0,5" 
                                       Foreground="White"/>

                            <TextBlock Text="• Verschiedene Symbole haben unterschiedliche Gewinnquoten" 
                                       TextWrapping="Wrap" 
                                       Margin="0,5" 
                                       Foreground="White"/>

                            <TextBlock Text="• Drei 7er bringen den Jackpot!" 
                                       TextWrapping="Wrap" 
                                       Margin="0,5" 
                                       Foreground="White"/>

                            <TextBlock Text="• Gewinnquoten: 2x bis 10x je nach Symbol" 
                                       TextWrapping="Wrap" 
                                       Margin="0,5" 
                                       Foreground="White"/>
                        </StackPanel>

                        <Button Grid.Row="2" 
                                Content="BlackJack spielen" 
                                Command="{Binding StartBlackJackCommand}" 
                                Background="#3498DB" 
                                Foreground="White" 
                                Padding="10" 
                                Margin="10"/>
                    </Grid>
                </Border>

                <!-- Slot Machine Card -->
                <Border Margin="10" 
                        BorderBrush="#E74C3C" 
                        BorderThickness="1" 
                        CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Slot Machine" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Padding="10" 
                                   Background="#E74C3C" 
                                   Foreground="White"/>

                        <StackPanel Grid.Row="1" Margin="10">
                            <TextBlock Text="Ziel: Bringe drei gleiche Symbole in einer Reihe, um zu gewinnen." 
                                       TextWrapping="Wrap" 
                                       Margin="0,10"
                                       Foreground="White"/>

                            <TextBlock Text="• Drei Walzen mit verschiedenen Symbolen" 
                                       TextWrapping="Wrap" 
                                       Margin="0,5"
                                       Foreground="White"/>

                            <TextBlock Text="• Verschiedene Symbole haben unterschiedliche Gewinnquoten" 
                                       TextWrapping="Wrap" 
                                       Margin="0,5"
                                       Foreground="White"/>

                            <TextBlock Text="• Drei 7er bringen den Jackpot!" 
                                       TextWrapping="Wrap" 
                                       Margin="0,5"
                                       Foreground="White"/>

                            <TextBlock Text="• Gewinnquoten: 2x bis 10x je nach Symbol" 
                                       TextWrapping="Wrap" 
                                       Margin="0,5"
                                       Foreground="White"/>
                        </StackPanel>

                        <Button Grid.Row="2" 
                                Content="Slot Machine spielen" 
                                Command="{Binding StartSlotMachineCommand}" 
                                Background="#E74C3C" 
                                Foreground="White" 
                                Padding="10" 
                                Margin="10"/>
                    </Grid>
                </Border>
            </UniformGrid>
        </Grid>

        <!-- Footer with Exit Button -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="10">
            <Button Content="Zurück zum Hauptmenü" 
                    Command="{Binding ReturnToMainMenuCommand}" 
                    Background="#95A5A6" 
                    Foreground="White" 
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</Page>