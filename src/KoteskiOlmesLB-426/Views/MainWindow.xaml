<Window x:Class="KoteskiOlmesLB_426.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoteskiOlmesLB_426.Views"
        mc:Ignorable="d"
        Title="Casino Royale" Height="720" Width="920"
        WindowStartupLocation="CenterScreen"
        Background="#E0E0E0"
        Closed="Window_Closed">

    <!-- Ressourcen für Stile -->
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,10">
            <TextBlock Text="Willkommen im Casino!" 
                       FontSize="24" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Frame für Navigation -->
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Background="White"
               Margin="20"/>

        <!-- Footer -->
        <TextBlock Grid.Row="2" 
                   Text="© 2025 Casino WPF App" 
                   HorizontalAlignment="Center" 
                   Margin="10"/>
    </Grid>
</Window>
